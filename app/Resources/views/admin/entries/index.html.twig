{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Címlista bejegyzések</h1>
    </div>

    <div class="container">
        <div class="col-md-12">
            <table class="table table-hover">
                <tr>
                    <th>Név</th>
                    <th>
                        Műveletek
                        <a href="{{ path('entry.create') }}" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </a>
                    </th>
                </tr>
                {% for entry in entries %}
                    <tr>
                        <td>{{ entry.name }}</td>
                        <td>
                            <a href="{{ path('entry.edit', {id: entry.id}) }}" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                            </a>
                            <a href="{{ path('entry.delete', {id: entry.id}) }}" class="btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="container">
        <div class="navigation">
            {{ knp_pagination_render(entries) }}
        </div>
    </div>
{% endblock %}